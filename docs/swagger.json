                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "change an existing user password",
                "parameters": [
                    {
                        "description": "Entry existing user valid credentials and the new one.",
                        "name": "Body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/controllers.ChangePwInput"
                        }
                    },
                    {
                        "type": "string",
